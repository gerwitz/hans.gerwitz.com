---
pageable: false
---
<% wrap_layout :site do %>
  <h1>Archive for
    <% case page_type
       when 'day' %>
      <%= Date.new(year, month, day).strftime('%B %e, 0%Y') %>
    <% when 'month' %>
      <%= Date.new(year, month, 1).strftime('%B, 0%Y') %>
    <% when 'year' %>
      <%= Date.new(year, 1, 1).strftime('0%Y') %>
    <% end %>
  </h1>

  <ol class="article-list">
    <% page_articles.each_with_index do |article, i| %>
      <li><%= link_to article.title, article, class: 'title' %> <%= link_to article.date.strftime('%B %e'), article, class: 'date' %></li>
    <% end %>
  </ol>
<% end %>