<% wrap_layout :site do %>
  <article class="writing h-entry">
<!--
  <div class="parents">
    <a href="/archive/">Writing</a> / <%= current_page.date.strftime("%Y") %> / <%= current_page.date.strftime("%B") %>
  </div>
-->
  <h1 class="p-name"><%= current_page.data.title %></h1>
  <div class="meta">
    <% if current_page.data.abstract %>
      <!-- <%= current_page.data.abstract %> -->
    <% end %>
    <% if current_page.data.categories %>
      <!-- categories: <%= current_page.data.categories.join(', ') %> -->
    <% end %>
    <% if current_page.data.tags %>
      <!-- tags: <%= current_page.data.tags.join(', ') %> -->
    <% end %>
<%
  if current_page.data.external.present?
    host = URI.parse(current_page.data.external).host.downcase
    host = host.start_with?('www.') ? host[4..-1] : host
%>
    <span class="external">
      published at <%= link_to host, current_page.data.external, rel: 'canonical' %> on
    </span>
    <time datetime="<%= current_page.date.strftime("%F") %>" class="dt-published"><%= current_page.date.strftime("%B %d, %Y") %></time>
  <% end %>
  </div>
  <div class="content e-content">
    <%= yield %>
  </div>
  </article>
<% end %>
