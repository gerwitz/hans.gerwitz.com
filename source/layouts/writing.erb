<% wrap_layout :site do %>
  <h1><%= current_page.data.title %></h1>
  <div class="meta">
    <time datetime="<%= current_page.date.strftime("%F") %>"><%= current_page.date.strftime("%B %d, %Y") %></time>
    <% if current_page.data.abstract %>
      <!-- <%= current_page.data.abstract %> -->
    <% end %>
    <% if current_page.data.categories %>
      <!-- categories: <%= current_page.data.categories.join(', ') %> -->
    <% end %>
    <% if current_page.data.tags %>
      <!-- tags: <%= current_page.data.tags.join(', ') %> -->
    <% end %>
<%
  if current_page.data.external.present?
    host = URI.parse(current_page.data.external).host.downcase
    host = host.start_with?('www.') ? host[4..-1] : host
%>
    <span class="external">
      <img src="https://plus.google.com/_/favicon?domain=<%= host %>" height="12" width="12" class="favicon" />
      published at <%= link_to host, current_page.data.external %>
    </span>
  </div>
  <div class="content republished">
<% else %>
  </div>
  <div class="content">
<% end %>
    <%= yield %>
  </div>
  </article>
<% end %>
