---
title: Quotes
---
<%# see data/quotes.yaml for contents %>

<section>
  <%
    quotes = data.quotes
    quotes.each do |q|
  %>
    <blockquote>
      <p><%= escape_html(q.quote) %></p><%# TODO: render Markdown %>
      <footer>
        <%= "#{q.who}" if q.who %><%= ", " if q.who && q.source %>
        <% if q.source %>
          <cite><%= escape_html(q.source) %></cite>
        <% end %>
        <%= ", #{q.date}" if q.date %>
      </footer>
    </blockquote>
  <% end %>
</section>
