<section class="timeline">
<ol>
  <%
    trips = data.travel.trips
    last_year = 0
    trips.each do |t|
      if (t.date.to_s.length > 4)
        parsed = Date.strptime(t.date, '%Y-%m')
        year = parsed.year
        monthname = parsed.strftime("%B")
      else
        year = t.date.to_i
        monthname = nil
      end
  %>
  <li data-year="<%= year %>">
    <time datetime="<%= t.date %>">
      <%= year if year > last_year %>
      <%#= monthname if monthname.present? %>
    </time>
    <p><%= t.description %></p>
    <%
      if t.geo
        lat = t.geo[0]
        long = t.geo[1]
        api_key = "AIzaSyCZ5BS-zRJbU3AkhhVNypaAH0sHC09tp-0"
        map_url = "http://maps.google.com/maps?z=14&t=h&q=loc:#{lat}+#{long}"
