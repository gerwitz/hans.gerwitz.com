	<meta property="twitter:description" content="<%= @item[:abstract] %>" />

	<!-- Facebook OpenGraph -->
	<meta property="og:site_name" property="<%= @site.config[:site_name] %>" />
	<meta property="og:type" content="article" />
	<meta property="og:url" content="<%= @site.config[:base_url] + item.path %>" />
	<meta property="og:title" content="<%= @item[:title] %>" />
	<meta property="og:description" content="<%= @item[:abstract] %>" />
	<meta property="og:image" content="<%= @site.config[:base_url] + 'assets/tree.png' %>" />

	<script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
	
	<script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
</head>
<body>
	<header id="masthead">
		<% home = @items.find { |i| i.rep_named(:default).path == '/' } %>
