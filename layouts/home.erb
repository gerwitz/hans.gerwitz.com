		<h2>Latest Tweet <small>from <a href="https://twitter.com/gerwitz">@gerwitz</a></small>
		</h2>
		<blockquote id="last_tweet">
			<p><i class="icon-refresh icon-spin"></i> Loading…</p>
			<small></small>
		</blockquote>
		<script>
		function twitter_callback_function( tweets ) {
			var this_tweet = tweets[0];
			var tweet_msg = this_tweet.text;
			for (var i=0; i<this_tweet.entities.urls.length; i++) {
				var this_url = this_tweet.entities.urls[i];
				var this_anchor = '<a href="'+this_url.expanded_url+'">'+this_url.display_url+'</a>';
				tweet_msg = tweet_msg.replace(this_url.url, this_anchor);
			}
			var tweet_date = moment(this_tweet.created_at).format('MMMM Do, YYYY');
		    $('#last_tweet>p').html(tweet_msg);
			var tweet_link = $('<a/>');
			var tweet_url = 'http://twitter.com/gerwitz/status/'+this_tweet.id;
			tweet_link.attr('href', tweet_url);
		    tweet_link.html('<date>'+tweet_date+'</date>');
		    $('#last_tweet>small').html(tweet_link);
		}
		</script>
		<script type="text/javascript" src="http://api.twitter.com/1/statuses/user_timeline.json?user_id=521&include_rts=false&exclude_replies=true&include_entities=true&trim_user=true&count=1&callback=twitter_callback_function"></script>
		
